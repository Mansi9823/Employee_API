{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Flutter",
        "request": "launch",
        "type": "dart",
        "program": "lib/main.dart",
        "pathMappings": {
          "/lib": "${workspaceFolder}/lib"
        }
      },
      {
        "name": "Flutter (Profile Mode)",
        "request": "launch",
        "type": "dart",
        "program": "lib/main.dart",
        "pathMappings": {
          "/lib": "${workspaceFolder}/lib"
        },
        "toolArgs": ["--profile"]
      },
      {
        "name": "Flutter (Release Mode)",
        "request": "launch",
        "type": "dart",
        "program": "lib/main.dart",
        "pathMappings": {
          "/lib": "${workspaceFolder}/lib"
        },
        "toolArgs": ["--release"]
      }
    ]
  }
  